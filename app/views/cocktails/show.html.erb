<div class="container d-flex flex-column align-items-center">

  <div class="card-product">
    <img src="<%= @cocktail.photo %>" />
    <div class="card-product-infos">
      <h2><%= @cocktail.name %></h2>
      <h3>Ingredients<span><%= link_to "Add", new_cocktail_dose_path(@cocktail), id:"add-ingredient" %></span></h3>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %>: <%= dose.description %> - <%= link_to dose_path(dose), method: :delete, data: { confirm: "You sure?"} do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
    </div>
  </div>
  <p><%= link_to "Back to list", root_path %></p>
</div>
