<div class="container">
  <h1><%= @cocktail.name %></h1>
  <h2>Ingredients<span><%= link_to "Add", new_cocktail_dose_path(@cocktail) %></span></h2>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %>: <%= dose.description %> - <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "You sure?"} %></li>
    <% end %>
  </ul>
  <p><%= link_to "Back to list", cocktails_path %></p>
</div>
